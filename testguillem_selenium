from selenium import webdriver
from selenium.webdriver.chrome.service import Service
from selenium.webdriver.common.by import By
import time

# Configura el controlador de Chrome (asegúrate de tener el driver instalado)
s = Service('/home/guillem/Desktop/M3/chromedriver-linux64/chromedriver')  
driver = webdriver.Chrome(service=s)

# Abre la página web
driver.get('http://www.cibergrup1.cecti.iesmontsia.cat/contacto-equipo-de-expertos-en-ciberseguridad-en-amposta/')

# Espera unos segundos para que se cargue completamente
time.sleep(3)

# Verifica si existe la etiqueta <meta name="robots">
meta_tag = driver.find_elements(By.XPATH, "//meta[@name='robots']")

if meta_tag:
    # Si existe, imprime el contenido de la etiqueta
    content = meta_tag[0].get_attribute('content')
    print(f"La etiqueta <meta name='robots'> está presente con el valor: {content}")
else:
    print("La etiqueta <meta name='robots'> no está presente en la página.")

# Cierra el navegador
driver.quit()
